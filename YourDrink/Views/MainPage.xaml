    <Grid Padding="10" RowDefinitions="50,auto,*,auto,*">
        <Label
            Margin="-10,-10,-10,10"
            BackgroundColor="lightGray"
            FontAttributes="Bold"
            FontSize="22" />

        <Label
            Grid.Row="1"
            FontAttributes="Bold"
            FontSize="22"
            Text="Most Popular" />


        <CollectionView
            Grid.Row="2"
            ItemsLayout="HorizontalGrid, 2"
            ItemsSource="{Binding MostPopulars, Mode=OneTime}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Cocktail">
                    <Frame
                        Margin="5"
                        Padding="0"
                        BorderColor="Transparent"
                        CornerRadius="14"
                        HeightRequest="135"
                        WidthRequest="170">
                        <Grid>
                            <Image
                                Aspect="Center"
                                HeightRequest="135"
                                WidthRequest="170">
                                <Image.Source>
                                    <UriImageSource CacheValidity="7:00:00:00" Uri="{Binding Image, Mode=OneTime}" />
                                </Image.Source>
                            </Image>
                            <Grid BackgroundColor="#80000000" VerticalOptions="End">
                                <Label
                                    Margin="0,0,0,5"
                                    FontAttributes="Bold"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Name, Mode=OneTime}"
                                    TextColor="WhiteSmoke" />
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label
            Grid.Row="3"
            FontAttributes="Bold"
            FontSize="22"
            Text="Lastest" />

        <CollectionView
            Grid.Row="4"
            ItemsLayout="HorizontalGrid, 2"
            ItemsSource="{Binding Lastest, Mode=OneTime}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Cocktail">
                    <Frame
                        Margin="5"
                        Padding="0"
                        BorderColor="Transparent"
                        CornerRadius="14"
                        HeightRequest="135"
                        WidthRequest="170">
                        <Grid>
                            <Image
                                Aspect="Center"
                                HeightRequest="135"
                                WidthRequest="170">
                                <Image.Source>
                                    <UriImageSource CacheValidity="7:00:00:00" Uri="{Binding Image, Mode=OneTime}" />
                                </Image.Source>
                            </Image>
                            <Grid BackgroundColor="#80000000" VerticalOptions="End">
                                <Label
                                    Margin="0,0,0,5"
                                    FontAttributes="Bold"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Name, Mode=OneTime}"
                                    TextColor="WhiteSmoke" />
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



    </Grid>

</ContentPage>
