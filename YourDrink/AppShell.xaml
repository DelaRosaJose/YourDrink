<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YourDrink.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YourDrink.Views"
    Title="YourDrink"
    Shell.FlyoutBehavior="Disabled">

    <ShellItem>
        <Tab Title="Recomented">

            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage">
                <ShellContent.Icon>
                    <FontImageSource
                        FontFamily="GoogleFontOutline"
                        Glyph="{StaticResource Arrow_back}"
                        Color="Black" />
                </ShellContent.Icon>
            </ShellContent>
        </Tab>
        <Tab Title="All">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Favorites">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Icon="arrow_left.png"
                Route="MainPage" />
        </Tab>

    </ShellItem>

    <!--<ShellContent ContentTemplate="{DataTemplate local:CocktailPage}" Route="CocktailPage"  />-->

</Shell>
